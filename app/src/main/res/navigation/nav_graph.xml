<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/cameraFragment"
        android:name="dev.synople.glassassistant.fragments.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" >
        <action
            android:id="@+id/action_cameraFragment_to_loadingFragment"
            app:destination="@id/loadingFragment" />
        <action
            android:id="@+id/action_cameraFragment_to_apiKeyFragment"
            app:destination="@id/apiKeyFragment" />
    </fragment>
    <fragment
        android:id="@+id/loadingFragment"
        android:name="dev.synople.glassassistant.fragments.LoadingFragment"
        android:label="fragment_loading"
        tools:layout="@layout/fragment_loading" >
        <action
            android:id="@+id/action_loadingFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <argument
            android:name="recorderFile"
            app:argType="java.io.File"
            app:nullable="true" />
        <argument
            android:name="imageFile"
            app:argType="java.io.File" />
        <action
            android:id="@+id/action_loadingFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="dev.synople.glassassistant.fragments.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <argument
            android:name="response"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/apiKeyFragment"
        android:name="dev.synople.glassassistant.fragments.ApiKeyFragment"
        android:label="fragment_api_key"
        tools:layout="@layout/fragment_api_key" >
        <action
            android:id="@+id/action_apiKeyFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_apiKeyFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>

    <fragment
        android:id="@+id/menuFragment"
        android:name="dev.synople.glassassistant.fragments.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_menuFragment_to_qrApkInstallerFragment"
            app:destination="@id/qrApkInstallerFragment" />
        <action
            android:id="@+id/action_menuFragment_to_apiKeyFragment"
            app:destination="@id/apiKeyFragment" />
        <action
            android:id="@+id/action_menuFragment_to_providerSettingsFragment"
            app:destination="@id/providerSettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/qrApkInstallerFragment"
        android:name="dev.synople.glassassistant.fragments.QrApkInstallerFragment"
        android:label="fragment_qr_apk_installer"
        tools:layout="@layout/fragment_qr_apk_installer" >
        <action
            android:id="@+id/action_qrApkInstallerFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>

    <fragment
        android:id="@+id/providerSettingsFragment"
        android:name="dev.synople.glassassistant.fragments.ProviderSettingsFragment"
        android:label="fragment_provider_settings"
        tools:layout="@layout/fragment_provider_settings" >
        <action
            android:id="@+id/action_providerSettingsFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
</navigation>